{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container">
        <a href="{{("/")}}"class="btn btn-outline-primary me-2 mt-3">Retour</a>
        <div class="col-xl-8 mt-5 d-flex justify-content-center mx-auto">
            
            <div class="card" style="width: 30rem;">
            <div class="card-body ">
            <h1 class="display-4 text-center mb-3">Register</h1>
                {{ form_start(registrationForm) }}
                    
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <button type="submit" class="btn btn-primary" style="width: 8rem;">Register</button>
                {{ form_end(registrationForm) }}
            </div>
                
            </div>
            
        </div>
    </div>
{% endblock %}
